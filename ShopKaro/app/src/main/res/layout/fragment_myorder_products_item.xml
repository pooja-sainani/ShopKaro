<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="4"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_OrderId_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id      : "
                android:textColor="#8B475D"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/item_OrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DB7093"
                android:textSize="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_TotalPrice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price : "
                android:textColor="#9662C4"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/item_TotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BB6DFF"
                android:textSize="20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_OrderDate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date : "
                android:textColor="#0085ff"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/item_OrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00d2ff"
                android:textSize="20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Space
                android:layout_width="1dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>