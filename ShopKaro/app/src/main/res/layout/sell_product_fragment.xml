<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="60dp"
    tools:context=".SellProductFragment">

    <ScrollView
        android:id="@+id/scroll_sell_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:singleLine="false"
                android:maxLength="30"
                android:hint="Product name"/>

            <Spinner
                android:id="@+id/static_product_category_spinner"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Product price"/>

            <EditText
                android:id="@+id/product_quantiy_available"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Product quantity"/>

            <EditText
                android:id="@+id/product_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:maxLength="200"
                android:singleLine="true"
                android:hint="Details"/>

            <EditText
                android:id="@+id/product_tag1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:maxLength="200"
                android:singleLine="true"
                android:hint="Add tag to decribe your product"/>

            <EditText
                android:id="@+id/product_tag2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:maxLength="200"
                android:singleLine="true"
                android:hint="Add another tag..."/>

            <EditText
                android:id="@+id/product_tag3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:maxLength="200"
                android:singleLine="true"
                android:hint="Add another tag..."/>

            <EditText
                android:id="@+id/product_quantiy_threshold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Threshold quantity"/>

            <Button
                android:id="@+id/add_product_button"
                android:text="@string/add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
