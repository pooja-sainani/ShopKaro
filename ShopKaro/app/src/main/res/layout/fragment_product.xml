<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <!--android:background="@drawable/bg_layout"-->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="4"
        >

        <TextView
            android:id="@+id/item_ProductName"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="Ashish Gupta"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0000ff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/item_ProductCost"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="October 13 at 7:46pm "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#005522"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_ProductDescription"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="Has won Code Jam event organised by google"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17dp" />

    </GridLayout>

</LinearLayout>
